\newenvironment{mtikzonimage}[2]
{%
    \setlength\imgwidth{#1}
    \settoheight\imgheight{\includegraphics[width=#1]{#2}}
    \begin{tikzonimage}[width=#1]{#2}[inner sep = 0pt]%
}
{%
    \end{tikzonimage}%            
}

\newenvironment{cropimg}[4]
{%                
    \settoheight\mlength{\includegraphics[width=#3]{#4}}
    
    \begin{mtikzonimage}{#1}{#2}
    
        \node[above right] at (0.6pt, \imgheight - \mlength - 0.2pt) 
        {\includegraphics[width=#3]{#4}};
        
        \draw[color=red, thick] (0.6pt,\imgheight-\mlength - 0.2pt) rectangle (#3 + 0.6pt,\imgheight - 0.2pt);%
}
{%
    \end{mtikzonimage}%
}
        
